#!/bin/bash

while true; do
    # Prompt the user for input
    read -p "Enter two things separated by space for option 'a': " input_a input_b

    # Convert input to lowercase for case-insensitive comparison
    option=$(echo "$input_a" | tr '[:upper:]' '[:lower:]')

    # Check the input provided
    case "$option" in
        "moorse")
            echo "$input_b"
            # Run the morse_script.sh with input_b as an argument
            /home/bodz/components_scripts/moorse "$input_b"
            
            ;;
        "lcd")
            # Run the lcd_script.sh with input_b as an argument
            /home/bodz/components_scripts/lcd "$input_b"
            ;;
        "temp")
            /home/bodz/components_scripts/temp
            ;;
        "motion")
            /home/bodz/components_scripts/motion
            ;;
        "quit")
            echo "Exiting the loop."
            break  # Exit the while loop
            ;;
        *)
            echo "Invalid option: $option"
            echo "Options are 'a', 'b', 'c', 'd', or 'quit'"
            ;;
    esac
done